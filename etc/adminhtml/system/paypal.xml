<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="wirecard_elasticengine_paypal" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>heading_title_paypal</label>
        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>text_enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_title</label>
        </field>
        <include path="Wirecard_ElasticEngine::system/credentials.xml" />
        <field id="payment_action" translate="label" type="select" sortOrder="55" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_payment_action</label>
            <source_model>Wirecard\ElasticEngine\Model\Adminhtml\Source\PaymentAction</source_model>
        </field>
        <field id="send_shopping_basket" translate="label" type="select" sortOrder="60" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_shopping_basket</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="sort_order" translate="label" type="text" sortOrder="160" showInDefault="1" showInWebsite="1"
               showInStore="0">
            <label>config_sort_order</label>
            <frontend_class>validate-number</frontend_class>
        </field>
        <field id="send_additional" translate="label" type="select" sortOrder="60" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_additional_info</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
    </group>
</include>
